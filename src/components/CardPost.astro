---
import FormattedDate from './FormattedDate.astro';

type Props = {
  title: string;
  date: string;
  url: string;
  summary: string;
  tags: string[];
};

const { url, title, date, summary, tags } = Astro.props;
---

<section
  class="group flex items-center rounded-lg border border-black/25 bg-white/80 p-4 saturate-200 backdrop-blur-sm transition-all duration-300 ease-in-out hover:scale-[1.02] hover:shadow-lg dark:border-white/25 dark:bg-black/50 dark:hover:shadow-white/10"
>
  <a href={url} rel="noopener noreferrer" class="w-full">
    <div class="flex flex-col gap-2">
      <div class="flex items-center gap-2">
        <div class="text-xl font-bold text-black/80 dark:text-white/80">
          {title}
        </div>
        <svg
          class="h-2.5 w-2.5 -translate-x-1 translate-y-1 -rotate-45 transition-transform group-hover:translate-x-0 group-hover:translate-y-0"
          viewBox="0 0 13 15"
          xmlns="http://www.w3.org/2000/svg"
        >
          <g
            fill="none"
            stroke="currentColor"
            stroke-width="2.4"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <polyline
              class="opacity-0 transition-opacity group-hover:opacity-100"
              points="5.33 0 10.83 5.5 5.33 11"></polyline>
            <line
              class="opacity-0 transition-transform group-hover:opacity-100"
              x1="10.83"
              y1="5.5"
              x2="0.83"
              y2="5.17"></line>
          </g>
        </svg>
      </div>
      <FormattedDate date={date} className="text-xs" />
      <p class="text-sm text-black/80 dark:text-white/80">{summary}</p>
      <ul class="flex flex-wrap gap-2">
        {
          (tags || []).map((tag) => (
            <li class="rounded-md border border-black/25 bg-neutral-200/50 px-2 py-1 text-xs text-black/80 dark:border-white/25 dark:bg-neutral-800/50 dark:text-white/80">
              {tag}
            </li>
          ))
        }
      </ul>
    </div>
  </a>
</section>
